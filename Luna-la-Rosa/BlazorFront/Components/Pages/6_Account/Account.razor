@page "/account"
<!-- Main Content -->
<main class="account-page">
    <h1>Мій обліковий запис</h1>

    <div class="account-container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <ul>
                <li><a href="#">Мій обліковий запис</a></li>
                <li><a href="#">Пароль</a></li>
                <li><a href="#">Мої замовлення</a></li>
                <li><a href="#">Вихід</a></li>
            </ul>
        </aside>

        <!-- Account Details Section -->
        <section class="account-details">
            <!-- Personal Information Section -->
            <div class="details-header">
                <h2>Особиста інформація</h2>
            </div>
            <div class="personal-info">
                <div class="input-group">
                    <input type="text" placeholder="Ім'я">
                    <input type="text" placeholder="Прізвище">
                </div>
                <div class="input-group">
                    <input type="text" placeholder="Номер телефону">
                    <input type="email" placeholder="E-mail">
                </div>
                <button class="update-button">Оновити дані профілю</button>
            </div>

            <!-- Password Update Section -->
            <div class="details-header">
                <h2>Пароль</h2>
            </div>
            <div class="password-update">
                <div class="input-group">
                    <input type="password" placeholder="Новий пароль">
                    <input type="password" placeholder="Підтвердіть новий пароль">
                </div>
                <button class="update-button">Змінити пароль</button>
            </div>

            <!-- Order History Section -->
            <div class="details-header">
                <h2>Мої замовлення</h2>
            </div>
            <div class="order-history">
                <table class="status-helper-table">
                    <tr>
                        <th><span class="order-status gray"><p>Обробляється</p></span></th>
                        <th><span class="order-status yellow"><p>Доставляється</p></span></th>
                        <th><span class="order-status green"><p>Готове</p></span></th>

                    </tr>
                </table>
                <table class="order-history-table">
                    <tr>
                        <th>№</th>
                        <th>Статус</th>
                        <th>Номер замовлення</th>
                        <th>Дата доставки</th>
                        <th>Дата замовлення</th>
                        <th>Дії</th>
                    </tr>
                    <tr>
                        <td>1.</td>
                        <td><span class="order-status green"></span></td>
                        <td>12345</td>
                        <td>2023-10-28</td>
                        <td>2023-10-25</td>
                        <td>
                            <button class="icon-button">
                                <img src="more-info-icon2.png" alt="Детальна інформація" class="icon">
                            </button>
                            <button class="icon-button">
                                <img src="repeat-icon2.png" alt="Повторити замовлення" class="icon">
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>2.</td>
                        <td><span class="order-status yellow"></span></td>
                        <td>12346</td>
                        <td>2023-10-29</td>
                        <td>2023-10-26</td>
                        <td>
                            <button class="icon-button">
                                <img src="more-info-icon3.png" alt="Детальна інформація" class="icon">
                            </button>
                            <button class="icon-button">
                                <img src="repeat-icon.png" alt="Повторити замовлення" class="icon">
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>3.</td>
                        <td><span class="order-status gray"></span></td>
                        <td>12347</td>
                        <td>2023-10-30</td>
                        <td>2023-10-27</td>
                        <td>
                            <button class="icon-button">
                                <img src="more-info-icon.png" alt="Детальна інформація" class="icon">
                            </button>
                            <button class="icon-button">
                                <img src="repeat-icon.png" alt="Повторити замовлення" class="icon">
                            </button>
                        </td>
                    </tr>
                </table>
            </div>
        </section>
    </div>
</main>